
<form method="post" action="${BASE_PATH}/security/menu/save" data-toggle="validate" >
<div class="bjui-pageContent">
         <div class="pageFormContent" layoutH="57">
            <dl>
                <dt>菜单名称</dt>
                <dd><input data-rule="required" name="menu.name" type="text" size="30"  /></dd>
            </dl>
             <dl class="nowrap">
                <dt>上级菜单</dt>
                <dd><input type="hidden"  value=0 name="parentid"  class="doc_lookup form-control" size="5"/></dd>  
				<dd><input  readonly type="text" data-toggle="lookup" data-url="${BASE_PATH}/security/menu?lookup=2" name="parentname" class="doc_lookup form-control" size="10"></dd>
            </dl>
            <dl>
                <dt>ref</dt>
                 <dd><input type="text" name="menu.ref" type="text" size="30"  /></dd>
             </dl>
    		 <dl>
                <dt>排序</dt>
                <dd><input data-rule="required" name="menu.orderby" type="text" size="30" /></dd>
            </dl>
             <dl>
                <dt>菜单描述</dt>
                <dd><textarea cols="45" rows="5" name="menu.description" ></textarea></dd>
             </dl>
             
            <div class="divider"></div>
 
        </div>
    
 </div>
 <div class="bjui-pageFooter">
    <ul>
        <li><button type="button" class="btn-close" data-icon="close">取消</button></li>
        <li><button type="submit" class="btn-default" data-icon="save">保存</button></li>
    </ul>
</div>

</form>
