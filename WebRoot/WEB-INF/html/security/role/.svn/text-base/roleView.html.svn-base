
<div class="bjui-pageHeader">
    <dl>
		<dt>角色名称：</dt>
				<dd><input id="roleName" class="required" name="role.name" type="text" size="30"  value="${(role.name)!}"/></dd>
		</dl>
		<dl class="nowrap">
				<dt>角色描述：</dt>
				<dd><input id="roleDescription" readonly="readonly" class="textInput readonly" name="role.description" value="${(role.description)!}" /></dd>  
		</dl>
</div>

<div class="bjui-pageContent">
 
	<table class="table" width="100%" layoutH="138">
		<thead>
			<tr>
				<th width="120">权限名称</th>
				<th width="140">权限描述</th>
			</tr>
		</thead>
		<tbody>
		
		<#list authorities as authority>
				<td>${authority.name}</td>
				<td>${(authority.description)!}</td>
			</tr>
		</#list>
		
		</tbody>
	</table>
</div>
