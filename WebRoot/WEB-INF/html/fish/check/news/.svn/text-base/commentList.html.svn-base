<div class="bjui-pageHeader">
    <form id="pagerForm" data-toggle="ajaxsearch" action="${BASE_PATH}/fish/newsCheck/${newsid}" method="post">
        <input type="hidden" name="pageSize" value="${(model.pageSize)!''}">
        <input type="hidden" name="pageCurrent" value="${(model.pageCurrent)!''}">
        <input type="hidden" name="orderField" value="${(param.orderField)!''}">
        <input type="hidden" name="orderDirection" value="${(param.orderDirection)!''}">
       
        <div class="bjui-searchBar">
             <a class="btn btn-green" href="javascript:;" onclick="$(this).navtab('reloadForm', true);" data-icon="refresh">刷新</a>
        </div>
    </form>
</div>

<div class="bjui-pageContent tableContent">
    <table data-toggle="tablefixed" data-width="100%" data-nowrap="true" id="tabledit11">
        <thead>
            <tr>
            	<th>发布人</th>
				<th>发布内容</th>			
                <th width="130">操作</th>
            </tr>
        </thead>
        <tbody>
			<#list page.getList() as comment>
			<tr data-id="${comment_index+1}">
				<td>${comment.nickname}</td>
				<td>${comment.content}</td>	
                <td>
                 	<a href="${BASE_PATH}/fish/newsCheck/deleteComment/${comment.id}-${comment.newsid}-${comment.uid}" class="btn btn-red" data-toggle="doajax" data-confirm-msg="确定要删除该行信息吗？">删</a>		
                </td>
            </tr>
           </#list>
        </tbody>
    </table>
</div>
<div class="bjui-pageFooter">
    <div class="pages">
        <span>每页&nbsp;</span>
        <div class="selectPagesize">
            <select data-toggle="selectpicker" data-toggle-change="changepagesize">
                <option value="30">30</option>
                <option value="60">60</option>
                <option value="120">120</option>
                <option value="150">150</option>
            </select>
        </div>
        <span>&nbsp;条，共 ${page.totalRow} 条</span>
    </div>
    <div class="pagination-box" data-toggle="pagination" data-total="${page.totalRow}" data-page-size="${page.pageSize}" data-page-current="${page.pageNumber}">
    </div>
    </div>