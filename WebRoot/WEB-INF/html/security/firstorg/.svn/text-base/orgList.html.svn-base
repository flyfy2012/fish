<div class="bjui-pageHeader" >
	<form id="pagerForm" data-toggle="ajaxsearch" action="${BASE_PATH}/security/firstorg" method="post">
        <div class="bjui-searchBar">
            <a class="btn btn-orange" href="${BASE_PATH}/security/firstorg/add"  data-toggle="dialog" data-icon="plus" data-title="部门添加">添加</a>
            <a class="btn btn-green" href="javascript:;" onclick="$(this).navtab('reloadForm', true);" data-icon="refresh">刷新</a>
        	<a class="btn btn-blue" href="${BASE_PATH}/security/firstorg/importExcel" data-id="importExcel" data-toggle="dialog" data-icon="plus" data-title="导入数据">导入excel</a>
        </div>
	</form>
</div>
<div class="bjui-pageContent tableContent">
	<table data-toggle="tablefixed" data-width="100%" data-nowrap="true"layoutH="138">
		<thead>
			<tr>
	<th width="40">序号</th>
				<th width="40">排序</th>
				<th width="100">部门名称</th>
				<th width="150">描述</th>
				<th width="40">操作</th>
			</tr>
		</thead>
		<tbody>
		
		<#list orglist as org>
			<tr data-id="${org_index+1}">
				<td>${org_index+1}</td>
				<td>${org.displayorder}</td>
				<td>${org.name}</td>
				<td>${(org.description)!}</td>
				<td>
				 <a href="${BASE_PATH}/security/firstorg/edit/${org.id}" class="btn btn-green" data-toggle="dialog" data-title="编辑">编辑</a>
				 <a href="${BASE_PATH}/security/firstorg/delete/${org.id}" class="btn btn-red" data-toggle="doajax" data-confirm-msg="确定要删除该行信息吗？">删</a>
				</td>
			</tr>
		</#list>
		</tbody>
	</table>
</div>